@model WebBanHangMVC.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chi tiết danh mục</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tên danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
