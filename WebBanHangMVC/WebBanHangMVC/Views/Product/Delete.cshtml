@model WebBanHangMVC.Models.Product

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 500px; margin: 0 auto;">
        <div class="card-header bg-danger text-white text-center py-4">
            <h2 class="fw-bold">🗑️ Xóa Sản Phẩm</h2>
        </div>
        <div class="card-body p-5 text-center">
            <p class="fs-5">Bạn có chắc chắn muốn xóa sản phẩm <strong>"@Model.Name"</strong> không?</p>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger btn-lg px-4 py-2 rounded-4">🗑️ Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2 rounded-4">🏠 Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
