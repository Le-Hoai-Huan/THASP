@model WebBanHangMVC.Models.Product

@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<h2 class="text-center text-primary my-4 display-4 fw-bold" style="font-family: 'Poppins', sans-serif;">✏️ Chỉnh Sửa Sản Phẩm</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="container bg-light shadow-lg rounded-4 p-5" style="max-width: 600px;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-4">
        <label asp-for="Name" class="form-label fw-bold">Tên Sản Phẩm</label>
        <input asp-for="Name" class="form-control rounded-3" placeholder="Nhập tên sản phẩm" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Price" class="form-label fw-bold">Giá</label>
        <input asp-for="Price" class="form-control rounded-3" placeholder="Nhập giá sản phẩm" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Description" class="form-label fw-bold">Mô Tả</label>
        <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Mô tả chi tiết sản phẩm"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="CategoryId" class="form-label fw-bold">Loại Sản Phẩm</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select rounded-3">
            <option value="">-- Chọn loại sản phẩm --</option>
        </select>
    </div>

    <div class="mb-4">
        <label asp-for="ImageUrl" class="form-label fw-bold">Hình Ảnh Sản Phẩm</label>
        <input type="file" asp-for="ImageUrl" class="form-control rounded-3" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
                <div class="text-center mt-3">
                    <img src="@Model.ImageUrl" alt="Product Image" class="rounded-4 shadow-sm" style="max-width: 200px;" />
                </div>
        }
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success btn-lg px-5 py-2 rounded-4">💾 Cập Nhật</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-5 py-2 rounded-4 ms-3">🔙 Quay Lại</a>
    </div>
</form>
